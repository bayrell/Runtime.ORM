namespace Runtime.ORM;

use Runtime.BaseProvider;
use Runtime.Exceptions.RuntimeException;
use Runtime.ORM.Connection;


class Provider extends BaseProvider
{
	Dict connection_list = {};
	
	
	/**
	 * Returns connection
	 */
	Connection getConnection(string name)
	{
		if (not this.connection_list.has(name))
		{
			throw new RuntimeException("Connection " ~ name ~ " not found");
		}
		
		return this.connection_list[name];
	}
	
	
	/**
	 * Add new connection
	 */
	void addConnection(Connection conn)
	{
		this.connection_list = this.connection_list.setIm(conn.getName(), conn);
	}
}